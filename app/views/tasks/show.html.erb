<div class="row ">
  <div class="col-4 mx-auto text-center task-show">
    <div class="row">
      <div class="col-12 task-show-head">
        <h3><%= @task.title %></h3>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-12">
        <div class"row">
          <div class="col-12">
            <b><%="#{I18n.t('activerecord.attributes.task.task_start')}:" %></b>
            <%="#{@task.task_start.strftime('%d/%m/%Y %H:%M')}" %>
          </div>
        </div>
        <div class"row">
          <div class="col-12">
            <b><%= "#{I18n.t('activerecord.attributes.task.task_finish')}:" %></b> 
            <%="#{@task.task_finish.strftime('%d/%m/%Y %H:%M')}" %>
          </div>
        </div>
        <div class"row">
          <div class="col-12">
            <b><%= "#{I18n.t('activerecord.attributes.task.email')}:" %></b> 
            <%="#{@task.email.present? ? @task.email : I18n.t('tasks.unregistered')}" %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row action-btns">
      <div class="col-4 mx-auto ">
        <%= link_to I18n.t('forms.edit'), edit_task_path(@task), class: 'btn btn-success' %>
        <%= link_to I18n.t('forms.return'), root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

