<div class="row">
  <div class="col-12">
    <%= form_for @task, html: { class: 'form' } do |f| %>
      <% if @task.errors.any? %>
        <div class='form-error-messages'>
          <ul>
            <% @task.errors.messages.each do |msg| %>
              <li>
                <%= msg.last[0] %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <%= f.label :title, class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row" data-provide="datepicker">
        <%= f.label :task_start, class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.datetime_field :task_start, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :task_finish, class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.datetime_field :task_finish, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: 'col-3 col-form-label' %>
        <div class="col-9">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 frm-action-btns"> 
          <%= f.submit action_name == 'new' || action_name == 'create' ? I18n.t('forms.create') : I18n.t('forms.update'), class: 'btn btn-success' %>
          <%= link_to I18n.t('forms.return'), root_path, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>